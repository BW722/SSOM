{  
    foreach(player in playerArray)
    {
        if(!IsValid(player))
            continue
        NSSendLargeMessageToPlayer( player, title, description, duration, image )
    }
}

void function SendLargeMessageToAlivePlayers(array<entity> playerArray, string title, string description, float duration, string image)
{  
    foreach(player in playerArray)
    {
        if(!IsAlive(player))
            continue
        NSSendLargeMessageToPlayer( player, title, description, duration, image )
    }
}